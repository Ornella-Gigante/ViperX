<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructionsLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <!-- Fondo gradiente y puntos animados ya están en layer_background, así que aquí solo deja transparente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to play"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#472183"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Swipe to move the snake\n• Eat the right answer and bonus food\n• Avoid crashing into yourself or walls"
            android:textSize="22sp"
            android:textColor="#323232"
            android:lineSpacingExtra="6dp" />

        <Button
            android:id="@+id/backFromInstructionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_marginTop="40dp"
            android:backgroundTint="#B983FF"
            android:textColor="#fff3b0"/>
    </LinearLayout>
</FrameLayout>
