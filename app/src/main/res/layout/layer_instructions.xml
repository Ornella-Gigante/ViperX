<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructionsLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fadeScrollbars="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp"
                android:background="@drawable/bg_glass_card"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“– How to play"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Master the basics and aim for the best score!"
                    android:textSize="16sp"
                    android:textColor="#E6FFFFFF"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:layout_marginBottom="14dp" />

                <View
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/divider_accent"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Swipe to move the snake"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:lineSpacingExtra="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Eat the right answer and bonus food"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:lineSpacingExtra="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Avoid crashing into walls or yourself"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:lineSpacingExtra="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_tip"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pro tips"
                        android:textStyle="bold"
                        android:textColor="#FFE9FF"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Plan your path ahead\nâ€¢ Math answers grow the snake\nâ€¢ Bonus gives extra points"
                        android:textSize="15sp"
                        android:textColor="#F2FFFFFF"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/backFromInstructionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="BACK"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="@drawable/btn_primary_gradient"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap BACK to return to the menu"
                    android:textSize="13sp"
                    android:textColor="#CCFFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
