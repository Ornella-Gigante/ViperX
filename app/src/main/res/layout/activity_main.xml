<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Menu Layer -->
    <LinearLayout
        android:id="@+id/menuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background_fun_gradient"
        android:visibility="visible">

        <ImageView
            android:src="@drawable/head_right"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Snake"/>

        <TextView
            android:id="@+id/highScoreLabel"
            android:text="High Score: 0"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textSize="24sp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/instructionsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="18sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- Instructions Layer -->
    <LinearLayout
        android:id="@+id/instructionsLayer"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CCFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:text="How to play"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#323232"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:text="Swipe to move the snake.\nEat the right answer and bonuses.\nAvoid crashing into yourself or walls!"
            android:textSize="20sp"
            android:textColor="#323232"/>
        <Button
            android:id="@+id/backFromInstructionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <!-- Game Layer -->
    <es.nellagames.viperx.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</FrameLayout>
