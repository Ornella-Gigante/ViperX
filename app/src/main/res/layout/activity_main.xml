<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fun_gradient">

    <!-- Fondo animado: siempre al fondo -->
    <es.nellagames.viperx.MovingShapesView
        android:id="@+id/animatedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Layer juego (GameView con panel de información) -->
    <FrameLayout
        android:id="@+id/gameLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Área de juego centrada con márgenes para mostrar el gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">



            <!-- GameView con fondo transparente -->
            <es.nellagames.viperx.GameView
                android:id="@+id/gameView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="visible" />

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/instructionsLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Overlay sutil para separar del fondo animado -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A000000" />

        <!-- Contenedor centrado con ancho máximo para que quede elegante en todas las pantallas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Card centrada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="800dp"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"

                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="22dp"
                    android:background="@drawable/bg_glass_card"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"                    android:elevation="8dp">

                    <!-- Título más grande y contrastado -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 How to play"
                        android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                    <!-- Subtítulo un poco mayor y claro -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Master the basics and aim for the best score!"
                        android:textSize="18sp"
                    android:textColor="#F2FFFFFF"
                    android:gravity="center"
                    android:layout_marginBottom="14dp" />

                    <!-- Divider con color más vivo -->
                    <View
                        android:layout_width="72dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/divider_accent"
                        android:layout_marginBottom="18dp" />

                    <!-- Bullets más grandes y con alto contraste -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Swipe to move the snake\n• Eat the right answer and bonus food\n• Avoid crashing into yourself or walls"
                        android:textSize="20sp"
                    android:textColor="#FFFFFFFF"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginBottom="14dp" />

                    <!-- Caja de tips con mejor contraste -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_tip"
                        android:padding="14dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pro tips"
                            android:textStyle="bold"
                            android:textColor="#84F7FF"
                        android:textSize="18sp"
                        android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Plan your path ahead\n• Math answers grow the snake\n• Bonus gives extra points"
                            android:textSize="16sp"
                        android:textColor="#FFFFFFFF"
                        android:lineSpacingExtra="6dp" />
                    </LinearLayout>

                    <!-- Botón más llamativo con gradiente y texto grande -->
                    <Button
                        android:id="@+id/backFromInstructionsButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="BACK"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="20sp"
                    android:background="@drawable/btn_primary_gradient"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="4dp" />

                    <!-- Hint inferior con alto contraste -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap BACK to return to the menu"
                        android:textSize="14sp"
                    android:textColor="#E6FFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>



    <!-- Layer menú -->
    <LinearLayout
        android:id="@+id/menuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:visibility="visible">

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIPER X"
            android:textSize="38sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textColor="#7B2FF2"
            android:shadowColor="#fff800"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:paddingBottom="12dp"
            android:paddingTop="8dp"
            android:background="@android:color/transparent"/>

        <ImageView
            android:src="@drawable/snake"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Snake"/>

        <TextView
            android:id="@+id/highScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score: 0"
            android:textSize="22sp"
            android:textColor="#22223B"
            android:layout_margin="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:background="@drawable/rounded_btn"
            android:textSize="24sp"
            android:backgroundTint="#B983FF"
            android:textColor="#fff3b0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"/>

        <Button
            android:id="@+id/instructionsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:background="@drawable/rounded_btn"
            android:textSize="18sp"
            android:backgroundTint="#577590"
            android:textColor="#fff3b0"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>