<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fun_gradient">

    <!-- Fondo animado: siempre al fondo -->
    <es.nellagames.viperx.MovingShapesView
        android:id="@+id/animatedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Layer juego (GameView con panel de información) -->
    <FrameLayout
        android:id="@+id/gameLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Área de juego centrada con márgenes para mostrar el gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- Panel superior con información del juego -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/game_panel_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/questionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q: 8 + 7 = ?"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:textSize="20sp"
                    android:textColor="#323232" />
            </LinearLayout>

            <!-- GameView con fondo transparente -->
            <es.nellagames.viperx.GameView
                android:id="@+id/gameView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="visible" />

        </LinearLayout>
    </FrameLayout>

    <!-- Layer instrucciones -->
    <FrameLayout
        android:id="@+id/instructionsLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="32dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to play"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#472183"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Swipe to move the snake\n• Eat the right answer and bonus food\n• Avoid crashing into yourself or walls"
                android:textSize="22sp"
                android:textColor="#323232"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/backFromInstructionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:layout_marginTop="40dp"
                android:backgroundTint="#B983FF"
                android:textColor="#fff3b0"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Layer menú -->
    <LinearLayout
        android:id="@+id/menuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:visibility="visible">

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIPER X"
            android:textSize="38sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textColor="#7B2FF2"
            android:shadowColor="#fff800"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:paddingBottom="12dp"
            android:paddingTop="8dp"
            android:background="@android:color/transparent"/>

        <ImageView
            android:src="@drawable/snake"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Snake"/>

        <TextView
            android:id="@+id/highScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score: 0"
            android:textSize="22sp"
            android:textColor="#22223B"
            android:layout_margin="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:background="@drawable/rounded_btn"
            android:textSize="24sp"
            android:backgroundTint="#B983FF"
            android:textColor="#fff3b0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"/>

        <Button
            android:id="@+id/instructionsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:background="@drawable/rounded_btn"
            android:textSize="18sp"
            android:backgroundTint="#577590"
            android:textColor="#fff3b0"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>