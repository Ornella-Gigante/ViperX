<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fun_gradient">

    <!-- Fondo animado: siempre al fondo -->
    <es.nellagames.viperx.MovingShapesView
        android:id="@+id/animatedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Layer juego (GameView) -->
    <es.nellagames.viperx.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Layer instrucciones -->
    <FrameLayout
        android:id="@+id/instructionsLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to play"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#472183"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Swipe to move the snake\n• Eat the right answer and bonus food\n• Avoid crashing into yourself or walls"
                android:textSize="22sp"
                android:textColor="#323232"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/backFromInstructionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:layout_marginTop="40dp"
                android:backgroundTint="#B983FF"
                android:textColor="#fff3b0"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Layer menú -->
    <LinearLayout
        android:id="@+id/menuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:visibility="visible">

        <ImageView
            android:src="@drawable/snake"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Snake"/>

        <TextView
            android:id="@+id/highScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score: 0"
            android:textSize="22sp"
            android:textColor="#22223B"
            android:layout_margin="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:background="@drawable/rounded_btn"
            android:textSize="24sp"
            android:backgroundTint="#B983FF"
            android:textColor="#fff3b0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"/>

        <Button
            android:id="@+id/instructionsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:background="@drawable/rounded_btn"
            android:textSize="18sp"
            android:backgroundTint="#577590"
            android:textColor="#fff3b0"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>
